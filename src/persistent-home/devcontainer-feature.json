{
    "name": "Persistent Home Mount",
    "id": "persistent-home",
    "version": "1.0.0",
    "description": "Persists the container home directory as a Docker volume.",
    "mounts": [
        {
            "source": "devcontainer-home-${devcontainerId}",
            "target": "/home/host",
            "type": "volume"
        },
        {
            "source": "devcontainer-userfiles",
            "target": "/home/userfiles",
            "type": "volume"
        }
    ],
    "postCreateCommand": "/usr/local/bin/persistent-home-init",
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
